@model Assignment.Models.Booking

@{
    ViewBag.Title = "Rate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rate your Experience</h2>
<hr />
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.BookingId)
        @Html.HiddenFor(model => model.CustomerId)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.EventDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EventDate)
                @Html.HiddenFor(model => model.EventDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BookingDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BookingDate)
                @Html.HiddenFor(model => model.BookingDate)
            </dd>

            @Html.HiddenFor(model => model.Status)

            <dt>
                @Html.DisplayNameFor(model => model.NumberOfPeople)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumberOfPeople)
                @Html.HiddenFor(model => model.NumberOfPeople)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Remarks)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Remarks)
                @Html.HiddenFor(model => model.Remarks)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Event.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Event.Name)
                @Html.HiddenFor(model => model.EventId)
            </dd>


        </dl>

        <div class="form-group">
            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
                1 - Poor, 2 - Adequate, 3 - Average, 4 - Good, 5 - Excellent!
                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
